# ============================================================
# HIPAA Medical De-identification System -- Environment Config
# ============================================================
# Copy this file to .env and fill in required values:
#   cp .env.example .env

# -- LLM Provider --
# Choose: "openai" or "azure"
LLM_PROVIDER=openai

# -- OpenAI Settings (when LLM_PROVIDER=openai) --
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# -- Azure OpenAI Settings (when LLM_PROVIDER=azure) --
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-azure-api-key
# AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# -- De-identification Settings --
# Mode: "mask" (black box), "placeholder" ([TAG] text), "synthetic" (fake data)
DEIDENTIFICATION_MODE=placeholder

# -- OCR Settings --
# Enable OCR for scanned documents (requires Tesseract)
OCR_ENABLED=true

# -- API Settings --
API_HOST=0.0.0.0
API_PORT=8000
MAX_FILE_SIZE_MB=50

# -- Storage --
STORAGE_DIR=/tmp/hipaa-deidentification-storage

# -- CORS --
CORS_ORIGINS=*

# -- Rate Limiting --
RATE_LIMIT=100/minute

# -- Logging --
LOG_LEVEL=INFO
LOG_FORMAT=console
